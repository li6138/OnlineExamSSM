<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.taohan.online.exam.util.Xml"
            prefHeight="400.0" prefWidth="600.0">



    <!-- 修改试题 -->
    <update id="updateSubject">
        UPDATE SubjectInfo SET
        subjectName=#{subjectName}, optionA=#{optionA}, optionB=#{optionB}, optionC=#{optionC}, optionD=#{optionD}, rightResult=#{rightResult}, subjectScore=#{subjectScore}, subjectType=#{subjectType}, courseId=#{course.courseId}, gradeId=#{grade.gradeId}, subjectEasy=#{subjectEasy}, division=#{division}
        WHERE subjectId=#{subjectId}
    </update>

    <!-- 删除试题 -->
    <delete id="delSubject">
        DELETE FROM SubjectInfo WHERE subjectId=#{subjectId}
    </delete>

    <!-- 批量添加试题 -->
    <insert id="addSubjects">
        INSERT INTO SubjectInfo VALUES
        <if test="subjects != null">
            <foreach collection="subjects" item="item" close=";" separator=",">
                (NULL, #{item.subjectName}, #{item.optionA}, #{item.optionB}, #{item.optionC}, #{item.optionD}, #{item.rightResult}, #{item.subjectScore}, #{item.subjectType}, #{item.course.courseId}, #{item.grade.gradeId}, #{item.subjectEasy}, #{item.division})
            </foreach>
        </if>
    </insert>






</AnchorPane>
